/**index.wxss**/
.head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ECECEC;
  padding: 72rpx 40rpx 60rpx;
}

.userinfo {
  align-items: center;
  width: 400rpx;
}

.userinfo-avatar {
  width: 124rpx;
  height: 124rpx;
  margin-right: 30rpx;
  border:1px #ececec solid;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333333;
  font-size: 30rpx;
  padding-top: 10rpx;
}

.prolist{
  padding: 0 30rpx; 
}
.img{
  width: 270rpx;
  text-align: center;
}
.prolist .img0{
  width: 124rpx;
  height: 106rpx;
}
.prolist .img1{
  width: 136rpx;
  height: 120rpx;
}
.prolist .img2{
  width: 154rpx;
  height: 86rpx;
}

.prolist .content{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 70rpx 0;
}
.prolist .content:after{
  content:"";
  display: block;
  height: 1px;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #ddd;
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
}
.prolist .content .right{
  width: 80%;
}
.prolist .content .right .top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.prolist .content .right .top .title{
  font-size: 34rpx;
  color: #333333;
}

.prolist .content .right .top .score{
  font-size: 34rpx;
  color: #007B00;
}
.prolist .content .right .desc{
  font-size: 28rpx;
  color: #666666;
  margin-top: 52rpx;
}

